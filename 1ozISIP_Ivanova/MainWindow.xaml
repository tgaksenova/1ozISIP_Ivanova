<Window x:Class="_1ozISIP_Ivanova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1ozISIP_Ivanova"
        mc:Ignorable="d"
        Title="Первое графическое приложение Аксёнова Т.Г." Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Frame Name="MainFrame" Grid.Row="1" HorizontalAlignment="Center" Width="800" Height="344" VerticalAlignment="Bottom"/>
        <Button Content="Назад" Background="Beige" HorizontalAlignment="Left" Height="40"
                Width="100" Foreground="Chocolate" FontSize="22" FontWeight="Bold"
                FontFamily="Book Antiqua" ToolTip="Кликните для возврата на предыдущую страницу"
                Margin="2,0,0,0" Name="Back" Grid.Row="0"/>
        <Label Content="Разработчик: 1озИСИП-2124, Аксёнова Татьяна Геннадьевна" Grid.Row="2"
               FontWeight="Bold" FontFamily="Book Antiqua" FontSize="22"
               HorizontalAlignment="Center" Foreground="Chocolate"/>
    </Grid>
</Window>
